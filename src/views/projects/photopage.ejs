<div class="row">
  <% if (project.showphototext){ %>
    <div class="col-md-3 col-sm-4 col-xs-12 hidden-sm hidden-xs">
      <div class="projPhotoDescription sticky-top scroll-show" >
        <div class="photo-title">
          <%= photo.title %> 
        </div> 
        <%= photo.description %>
      </div>
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
  <% } else{ %>
    <div class="col-sm-12">
  <% } %>
    <a onclick="$('#photoModal-<%=photo.photoid%>').modal();" class="tilePhotoLink">
      <img src="/photos/<%= photo.url %>" class="pagePhoto" />
    </a>
  </div>
  <% if (project.showphototext){ %>
    <div class="col-sm-12 hidden-md hidden-lg">
      <div class="projPhotoDescription" >
        <div class="photo-title">
          <%= photo.title %> 
        </div> 
        <%= photo.description %>
      </div>
    </div>
  <% } %>
  <div class="modal fade" id="photoModal-<%= photo.photoid %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel"><%=photo.title%></h4>
        </div>
        <div class="modal-body">
          <div class="modalPhotoContainer">
            <img src="/photos/<%=photo.url%>" class="modalPhoto">
          </div>
          <div class="modalPhotoCaption">
            <%=photo.caption%>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
