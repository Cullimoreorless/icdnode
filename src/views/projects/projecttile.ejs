<div class="col-md-4 col-sm-6 col-xs-12 projectTile"
    onclick="window.location = '/projects/<%=project.url %>'">
  
  <% if(project.photos && project.photos.length){ %>
    <div style="max-height:250px;overflow-y:hidden;">
      <div class="bgPhotos slide-show" id="projectphotos<%=project.projectid %>">
        <% project.photos.forEach(function(photo){ %>
          <img  class="projPhoto slide" src="/photos/<%= photo.url %>" style="max-width:100%;" />
        <% }) %>
      </div>
      <div class="photoCaptions slide-show" id="projectcaptions<%=project.projectid %>">
        <% project.photos.forEach(function(photo){ %>
          <div class="slide photoCaptionContainer">
            <%= photo.title %> -
            <%= photo.caption %>
          </div>
        <% }) %>
      </div>
      <div class="photoOverlay">
        <div class="projectTitle">
          <%= project.name %>
        </div>
        <%= project.teaser %>
        <div class="photoCaptionContainer">
        </div>
      </div>
    </div>
  <% } %>
</div>